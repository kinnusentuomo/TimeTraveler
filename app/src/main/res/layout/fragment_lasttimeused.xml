<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundstripesright">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            style="@style/TextViewTheme"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <tuomomees.screentimecalculator.customTextView
            android:id="@+id/textViewTotalTimeSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/totaltimeusage"
            android:layout_column="1"
            style="@style/TextViewTheme"
            />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <tuomomees.screentimecalculator.customTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top5apps_label"
            android:textAlignment="center"
            android:layout_column="1"
            style="@style/TextViewTheme"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageViewTop1App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center|left"
            />

        <tuomomees.screentimecalculator.customTextView
            android:id="@+id/top1AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="Tähän tulee top1 viimeksi käytetty aika."
            style="@style/TextViewTheme"
            android:layout_gravity="center|left|left"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageViewTop2App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center|left"
            />

        <tuomomees.screentimecalculator.customTextView
            android:id="@+id/top2AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tähän tulee top2 viimeksi käytetty aika."
            style="@style/TextViewTheme"
            android:layout_gravity="center|left"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageViewTop3App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center|left"
            />

        <tuomomees.screentimecalculator.customTextView
            android:id="@+id/top3AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tähän tulee top3 viimeksi käytetty aika."
            style="@style/TextViewTheme"
            android:layout_gravity="center|left"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageViewTop4App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center|left"
            />

        <tuomomees.screentimecalculator.customTextView
            android:id="@+id/top4AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tähän tulee top4 viimeksi käytetty aika."
            style="@style/TextViewTheme"
            android:layout_gravity="center|left"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageViewTop5App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center|left"
            />

        <tuomomees.screentimecalculator.customTextView
            android:id="@+id/top5AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tähän tulee top5 viimeksi käytetty aika."
            style="@style/TextViewTheme"
            android:layout_gravity="center|left"
            />

    </TableRow>
</TableLayout>